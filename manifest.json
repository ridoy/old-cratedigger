{
    "manifest_version": 2,
    "name": "CrateDigger",
    "description": "Turn YouTube into the ultimate music sampling machine",
    "version": "1",
    "author": "Ridoy",
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "content_scripts": [{
        "matches": ["*://*.youtube.com/*"],
        "js": [
            "vendor/jquery-3.3.1.min.js",
            "vendor/arrive.min.js",
            "js/inject.js"
        ],
        "css": [
            "css/styles.css"
        ]
    }],
    "permissions": [
        "https://*/*",
        "http://*/*",
        "downloads"
    ]
}
